/* pages/headshow/headshow.wxss */

page {
  width: 100%;
  height: 100%;
  background: #fff;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

swiper {
  width: 100%;
  height: 600rpx;
}

swiper-item {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.result-image {
  width: 400rpx;
}

.bottom-view {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 80rpx;
}

.down-view {
  width: 80%;
  height: 80rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  background: #8052db;
  color: #fff;
  border-radius: 10rpx;
}

.down-img {
  width: 36rpx;
  height: 36rpx;
}

.down-text{
  color: #fff;
  font-size: 36rpx;
  margin-left: 10rpx;
}

.collection-view {
  width: 80%;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
}


.item-view {
  width: 200rpx;
  height: 200rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}

.item-view-wrapper {
  width: 200rpx;
  height: 200rpx;
  position: relative;
}

.share-btn{
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 100;
  background: rgba(255, 255, 255, 0);
}

button,button::after{
  border: 0;
}

.item-view image{
  width: 108rpx;
  height: 108rpx;
}

.item-view text{
  font-size: 30rpx;
  color: #555;
}

.nav-view {
  width: 200rpx;
  height: 200rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}

.down-hint {
  width: 80%;
  height: 56rpx;
  color:#333;
  font-size: 24rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}