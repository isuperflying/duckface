@import '../../utils/bg.wxss';

.top-view {
  width: 100%;
  height: 180rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: space-around;
  margin-top: 20rpx;
}

.left-img {
  width: 350rpx;
  height: 175rpx;
  border-radius: 10px;
  border: 2px solid #fff;
}

.nav-view {
  width: 670rpx;
  height: 284rpx;
  position: absolute;
  left: 0;
  top: 0;
  opacity: 0;
}

.hot-list {
  width: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 30rpx;
}

.img-view {
  width: 250rpx;
  height: 250rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.item-img {
  width: 172rpx;
}

.item-img.right {
  margin-left: 20rpx;
}
